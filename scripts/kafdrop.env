# ============================================
# CONFIGURACION DE KAFDROP - Edita estos valores segun tu ambiente
# ============================================

# Namespace donde se desplegara Kafdrop
KAFDROP_NAMESPACE="cdc-monitoring"

# Namespace donde esta tu cluster de Kafka
KAFKA_NAMESPACE="streamskafka"

# Nombre del servicio de Kafka (bootstrap server)
# Cambia esto segun el nombre de tu servicio de Kafka
KAFKA_SERVICE_NAME="my-cluster-kafka-bootstrap"

# Puerto del servicio de Kafka
KAFKA_PORT="9092"

# Construir la URL completa del broker
# Formato: <service-name>.<namespace>.svc.cluster.local:<port>
KAFKA_BROKERS="${KAFKA_SERVICE_NAME}.${KAFKA_NAMESPACE}.svc.cluster.local:${KAFKA_PORT}"

# Configuracion adicional de Kafdrop
KAFDROP_JVM_OPTS="-Xms256M -Xmx1G"
KAFDROP_SERVER_CONTEXT="/"

# Argumentos adicionales para Kafdrop
KAFDROP_ARGS="--consumer.properties.auto.offset.reset=earliest --consumer.properties.max.poll.records=100"

# Puerto local para port-forward
LOCAL_PORT="9000"

# Imagen de Kafdrop (puedes cambiar la version aqui)
KAFDROP_IMAGE="obsidiandynamics/kafdrop:latest"

# Recursos para el pod
KAFDROP_MEMORY_REQUEST="512Mi"
KAFDROP_MEMORY_LIMIT="2Gi"
KAFDROP_CPU_REQUEST="200m"
KAFDROP_CPU_LIMIT="1000m"